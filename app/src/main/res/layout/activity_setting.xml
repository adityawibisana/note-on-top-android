<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SettingsActivity">

    <TextView style="@style/DefaultTextView"
              android:id="@+id/tv_note_padding_size_text"
              android:layout_width="match_parent"
              android:layout_margin="@dimen/margin"
              android:textSize="@dimen/font_size_default"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              android:onClick="showSeekBarDialog"
              android:text="@string/padding_size" />

    <TextView style="@style/DefaultTextView"
              android:id="@+id/tv_padding_size"
              android:layout_marginEnd="@dimen/margin"
              android:textSize="@dimen/font_size_default"
              app:layout_constraintTop_toTopOf="@id/tv_note_padding_size_text"
              app:layout_constraintRight_toRightOf="parent"
              android:onClick="showSeekBarDialog"
              tools:text="90" />

</androidx.constraintlayout.widget.ConstraintLayout>